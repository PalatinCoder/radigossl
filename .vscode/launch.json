{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "CGO_CFLAGS": "-I${workspaceFolder}\\libvlc\\x64\\include -Wno-deprecated-declarations -Wno-int-to-pointer-cast",
                "CGO_LDFLAGS": "-L${workspaceFolder}\\libvlc\\x64",
                "PATH": "${env:PATH};${workspaceFolder}\\libvlc\\x64"
            },
            "args": []
        },
        {
            "name": "Launch prebuilt",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/radigossl.exe",
            "preLaunchTask": "build",
            "env": {
                "PATH": "${env:PATH};${workspaceFolder}\\libvlc\\x64"
            },
        }
    ]
}